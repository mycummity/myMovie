 /* 影片信息展示 */
.item-detail{
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.item-detail .left-detail{
  width: 200rpx;
  height: 300rpx;
  margin-right: 20rpx;
}
.left-detail image{
  width: 100%;
  height: 100%;
}
.item-detail .right-detail{
  font-size: 32rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.right-detail .item-title{
  font-size: 40rpx;
  font-weight: bold;
}
.item-gut{
  margin-top: 40rpx;
  font-size: 32rpx;
  color: #353535;
  word-break: break-all;
  overflow: hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}
.item-gut .item-gut-title{
  color: #b3b3b3;
  margin-bottom: 20rpx;
}

/* 标签 */
.item-tags{
  margin: 30rpx 0;
}
.item-tags .item-tags-title{
  font-size: 32rpx;
  color: #b3b3b3;
  margin-bottom: 20rpx;
}
.item-tags .item-tags-list{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.item-tags .item-tags-list text{
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  font-size: 32rpx;
  color: #353535;
  text-align: center;
  border-radius: 40rpx;
  margin: 0 20rpx 20rpx 0;
}

/* 评论 */
.comment-list-group{
  padding: 60rpx 0;
}
.comment-list-group .comment-title{
  font-size: 32rpx;
  color: #b3b3b3;
}

.more-comment{
  text-align: center;
  font-size: 36rpx;
  color: #09A3E5;
  margin-bottom: 40rpx;
}