<view class="items-group">
  <view class="items-top">
    <view class="items-title">{{title}}</view>
    <navigator class="items-more" url="{{moreurl}}">更多</navigator>
  </view>
  <!-- 电影 -->
  <scroll-view class="items-scroll-view" scroll-x="{{true}}">
    <item wx:for="{{items}}" wx:key="index" item="{{item}}" itemurl="/pages/detail/detail?id={{item.id}}"></item>
  </scroll-view>
</view>
